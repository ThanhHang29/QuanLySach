<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="@string/add_author_new"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:text="@string/seri_author"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            style="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <EditText
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/edtSeriAuthor"
            android:background="@color/white"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_height="match_parent">
            <requestFocus/>
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:text="Tên tác giả :"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            style="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <EditText
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/edtNameAuthor"
            android:background="@color/white"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:layout_height="match_parent">
            <requestFocus/>
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/tvClear"
            android:text="@string/clear"
            android:background="@drawable/state_bg"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            style="?android:attr/textAppearanceMedium"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/tvSaveAuthor"
            android:background="@drawable/state_bg"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/tvSaveAuthor"
            android:textColor="@color/black"
            style="?android:attr/textAppearanceMedium"
            android:layout_height="match_parent">
            <requestFocus/>
        </TextView>

    </LinearLayout>

</LinearLayout>